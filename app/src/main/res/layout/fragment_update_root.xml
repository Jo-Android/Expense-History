<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="20dp"
    android:paddingHorizontal="10dp"
    android:orientation="vertical">

    <include
        layout="@layout/layout_edit_top"
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        layout="@layout/layout_item_title_description_edit"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <include
        layout="@layout/layout_title_description"
        android:id="@+id/rootCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        layout="@layout/layout_title_description"
        android:id="@+id/rootUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/isDescription"
        android:button="@null"
        android:layout_gravity="center_horizontal"
        android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
        android:drawablePadding="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/is_description"
        android:textSize="16sp" />

    <include
        layout="@layout/layout_child_list"
        android:visibility="gone"
        android:id="@+id/rootChild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>